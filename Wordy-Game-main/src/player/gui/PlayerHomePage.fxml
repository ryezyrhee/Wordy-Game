<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="HomePage" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="player.WordyClient">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" />
      <ImageView fitHeight="556.0" fitWidth="744.0" pickOnBounds="true">
         <image>
            <Image url="@background/homepage.jpg" />
         </image>
      </ImageView>
      <Label layoutX="218.0" layoutY="82.0" prefHeight="101.0" prefWidth="357.0" text="Let's Play" textFill="WHITE">
         <font>
            <Font name="Rockwell Bold Italic" size="72.0" />
         </font>
      </Label>
      <ImageView fitHeight="176.0" fitWidth="522.0" layoutX="130.0" layoutY="164.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@background/wordy-.png" />
         </image>
      </ImageView>
      <Button fx:id="startGameButton" layoutX="255.0" layoutY="326.0" mnemonicParsing="false" onAction="#startGamePressed" style="-fx-background-radius: 15px; -fx-background-color: #ffc061;" text="Start Game" textFill="WHITE">
         <font>
            <Font name="Rockwell" size="36.0" />
         </font>
      </Button>
      <Label layoutX="43.0" layoutY="42.0" text="Welcome back," textFill="WHITE">
         <font>
            <Font name="Rockwell" size="31.0" />
         </font>
      </Label>
      <Label fx:id="globalUsername" layoutX="281.0" layoutY="42.0" textFill="WHITE">
         <font>
            <Font name="Rockwell" size="31.0" />
         </font>
      </Label>
      <Button fx:id="logoutButton" layoutX="646.0" layoutY="498.0" mnemonicParsing="false" onAction="#logoutPressed" style="-fx-background-color: #6fe8b5; -fx-background-radius: 15px;" text="Logout" textFill="WHITE">
         <font>
            <Font name="Rockwell" size="18.0" />
         </font>
      </Button>
      <Label fx:id="waiting" layoutX="279.0" layoutY="486.0" text="Start a New Game!" textFill="WHITE">
         <font>
            <Font name="Rockwell Italic" size="19.0" />
         </font>
      </Label>
      <Button fx:id="leaderboardButton" layoutX="33.0" layoutY="495.0" mnemonicParsing="false" onAction="#leaderboardBtn" style="-fx-background-color: #6fe8b5; -fx-background-radius: 15px;" text="Leaderboard" textFill="WHITE">
         <font>
            <Font name="Rockwell" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
